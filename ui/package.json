{
  "name": "nym-drive",
  "version": "0.1.1",
  "description": "An open-source, decentralized, e2e encrypted, privacy-friendly alternative to Dropbox/Google Drive.",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start-react": "ESLINT_NO_DEV_ERRORS='true' BROWSER=none react-scripts start",
    "build-react": "react-scripts build",
    "dev": "concurrently -k \"npm run start-react\" \"npm run electron\"",
    "electron": "wait-on tcp:3000 && electron-forge start",
    "package": "react-scripts build && electron-forge package",
    "make": "react-scripts build && electron-forge make"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "lokijs": "^1.5.12",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-loader-spinner": "^4.0.0",
    "react-scripts": "4.0.3",
    "ws": "^8.3.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.52",
    "@electron-forge/maker-deb": "^6.0.0-beta.52",
    "@electron-forge/maker-rpm": "^6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "^6.0.0-beta.52",
    "concurrently": "^6.4.0",
    "electron": "^16.0.0",
    "electron-icon-builder": "^2.0.1",
    "electron-reloader": "^1.2.1",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "wait-on": "^6.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "icons/mac/icon.icns",
        "name": "NymDrive",
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "nym-drive"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
